CC = gcc
SRC = main.c school.c
OBJ = $(patsubst %.c,%.o,$(SRC))
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *.o $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all

# Dependency rule for object files on header file
%.o: %.c m.h
	$(CC) -c $< -o $@ $(CFLAGS)
